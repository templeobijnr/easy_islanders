{
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "predeploy": [
                "npm --prefix \"$RESOURCE_DIR\" run build"
            ],
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ]
        }
    ],
    "firestore": [
        {
            "database": "easy-db",
            "rules": "firestore.rules"
        }
    ],
    "emulators": {
        "auth": {
            "port": 9099
        },
        "firestore": {
            "port": 8080
        },
        "functions": {
            "port": 5001
        },
        "ui": {
            "enabled": true,
            "host": "127.0.0.1",
            "port": 4000
        },
        "hub": {
            "port": 4401
        },
        "logging": {
            "port": 4501
        },
        "singleProjectMode": true
    },
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/v1/**",
                "function": {
                    "functionId": "api",
                    "region": "europe-west1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}