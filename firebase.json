{
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "predeploy": [
                "npm --prefix \"$RESOURCE_DIR\" run build"
            ],
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ]
        }
    ],
    "firestore": [
        {
            "database": "easy-db",
            "rules": "firestore.rules",
            "indexes": "firestore.indexes.json"
        }
    ],
    "storage": [
        {
            "bucket": "easy-islanders.firebasestorage.app",
            "rules": "storage.rules"
        }
    ],
    "emulators": {
        "auth": {
            "port": 9099
        },
        "firestore": {
            "port": 8080
        },
        "functions": {
            "port": 5001
        },
        "storage": {
            "port": 9199
        },
        "ui": {
            "enabled": true,
            "host": "127.0.0.1",
            "port": 4000
        },
        "hub": {
            "port": 4401
        },
        "logging": {
            "port": 4501
        },
        "singleProjectMode": true
    },
    "hosting": {
        "public": "dist",
        "predeploy": [
            "npm run build"
        ],
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/v1/**",
                "function": {
                    "functionId": "apiV1",
                    "region": "europe-west1"
                }
            },
            {
                "source": "/legacy/**",
                "function": {
                    "functionId": "api",
                    "region": "europe-west1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
