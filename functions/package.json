        "@google/generative-ai": "^0.24.1",
        "@types/cheerio": "^1.0.0",
        "axios": "^1.13.2",
        "cheerio": "^1.1.2",
        "cors": "^2.8.5",
        "csv-parse": "^6.1.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.5.1",
        "firebase-admin": "^12.0.0",
        "firebase-functions": "^4.5.0",
        "helmet": "^7.1.0",
