        "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.integration.config.js --runInBand",
        "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
    },
    "engines": {
        "node": "20"
    },
    "main": "lib/index.js",
    "dependencies": {
        "@askmerve/shared": "file:../packages/shared",
