{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@askmerve/shared": [
                "../packages/shared/src/index"
            ],
            "@askmerve/shared/*": [
                "../packages/shared/src/*"
            ]
        }
    },
    "compileOnSave": true,
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules/typesense"
    ]
}