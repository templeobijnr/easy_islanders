# =============================================================================
# Easy Islanders - Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED - Core Services
# -----------------------------------------------------------------------------

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_VISION_MODEL=gemini-2.0-flash
GEMINI_CHAT_MODEL=gemini-2.0-flash

# Firebase (usually auto-configured in Cloud Functions)
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
GCLOUD_PROJECT=your-project-id

# -----------------------------------------------------------------------------
# OPTIONAL - External Services
# -----------------------------------------------------------------------------

# Typesense Search (required for marketplace search)
TYPESENSE_API_KEY=your_typesense_api_key
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http

# Twilio (required for WhatsApp/SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Stripe (required for payments - currently commented out)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google Places API
GOOGLE_PLACES_API_KEY=your_google_places_api_key
GOOGLE_PLACES_API_KEY_ENV=your_google_places_api_key

# Mapbox (for geocoding)
MAPBOX_TOKEN=your_mapbox_token

# -----------------------------------------------------------------------------
# OPTIONAL - Defaults & Fallbacks
# -----------------------------------------------------------------------------

# Default host for booking notifications
EASY_HOST_EMAIL=host@example.com
EASY_HOST_PHONE=+1234567890

# Dev bypass for claim flow (set to 'true' in development only)
ENABLE_DEV_BYPASS=false

# Test vendor phone for seeding
TEST_VENDOR_PHONE=whatsapp:+14155238886
